import random

def generate_gene_sequence(length):
    """
    Generate a random DNA gene sequence of given length.
    DNA bases: A, T, C, G
    """
    bases = ['A', 'T', 'C', 'G']
    return ''.join(random.choice(bases) for _ in range(length))

def gc_content(sequence):
    """
    Calculate the GC content percentage of a DNA sequence.
    """
    if len(sequence) == 0:
        return 0
    gc_count = sequence.count('G') + sequence.count('C')
    return (gc_count / len(sequence)) * 100

def complement(sequence):
    """
    Return the complementary DNA sequence.
    A <-> T, C <-> G
    """
    comp_map = {
        'A': 'T',
        'T': 'A',
        'C': 'G',
        'G': 'C'
    }
    return ''.join(comp_map.get(base, base) for base in sequence)

def reverse_complement(sequence):
    """
    Return the reverse complement of a DNA sequence.
    """
    return complement(sequence)[::-1]

def nucleotide_count(sequence):
    """
    Count occurrences of each nucleotide in the sequence.
    """
    return {
        'A': sequence.count('A'),
        'T': sequence.count('T'),
        'C': sequence.count('C'),
        'G': sequence.count('G')
    }

# Main program
if __name__ == "__main__":
    length = int(input("Enter gene sequence length: "))
    
    dna = generate_gene_sequence(length)
    
    print("\nGenerated Gene Sequence:")
    print(dna)
    
    print("\nSequence Length:", len(dna))
    print("Nucleotide Count:", nucleotide_count(dna))
    print("GC Content: {:.2f}%".format(gc_content(dna)))
    print("Complement:", complement(dna))
    print("Reverse Complement:", reverse_complement(dna))
